    function carousel_move(carousel_id, dir) {
	let car = document.getElementById(carousel_id);
	cs = car.children;
	console.log(cs);
	let i = 0;
	for (let c of cs) {
	    console.log(c);
	    console.log(c.className)
	    if (c.className.includes('active')) {
		console.log(i);
		break;
	    }
	    i++;
	}
	console.log(`Element at index ${i}`);
	cs[i].className = 'carousel-item fade';
	if (dir > 0) {
	    cs[Math.min(i+dir, cs.length-1)].className = 'carousel-item-active fade';
	}
	else {
	    cs[Math.max(i+dir, 0)].className = 'carousel-item-active fade';
	}
    }
